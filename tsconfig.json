{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["dom", "es2015"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "isolatedModules": true,
    "downlevelIteration": true,
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["src", "src/types"],
  "exclude": ["node_modules"]
}